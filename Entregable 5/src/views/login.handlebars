<div class="sidenav">
    <div class="login-main-text">
        <h2>Ecommerce<br> Login Page</h2>
        <p>Inicia sesión o registrate para acceder a la tienda</p>
    </div>
</div>
<div class="main">
    <div class="col-md-6 col-sm-12">
        <div class="login-form">
            <form  id="loginForm">
                <div class="form-group">
                    <label>Usuario</label>
                    <input name="email" type="email" class="form-control" placeholder="ejemplo123@ejemplo.com">
                </div>
                <div class="form-group">
                    <label>Contraseña</label>
                    <input name="password" type="password" class="form-control" placeholder="xxxxxxxx">
                </div>
                <button type="submit" class="btn btn-black">Iniciar sesión</button>
            </form>
            <a href="/register">Registrarse</a>
        </div>
    </div>
</div>

<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/login.js"></script>